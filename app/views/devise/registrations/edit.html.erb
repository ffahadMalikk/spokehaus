<section id='user-edit' class='page-section'>
  <header class='page-section-header'>
    <h1>Edit My Profile</h1>
  </header>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class='help-block'>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :shoe_size %>
      <%= f.text_field :shoe_size %>
    </div>

    <div class="field">
      <%= f.label :birthdate, 'birthdate' %>
      <%= f.date_field :birthdate %>
    </div>

    <p class='info'>Change your password.</p>

    <div class="field">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off" %>
      <p class='help-block'>We need your current password to confirm your changes.</p>
    </div>

    <div class="field">
      <%= f.label :password, 'New Password' %>
      <%= f.password_field :password, autocomplete: "off" %>
      <p class='help-block'>Leave blank if you don't want to change it.</p>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'New Password Confirmation' %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <p class='help-block'>Must match new password.</p>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'primary-action' %>
    </div>
  <% end %>
</section>
